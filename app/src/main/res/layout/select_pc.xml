<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="40dp"
            android:textSize="@dimen/dp_15"
            android:text="Select State : "
            android:gravity="left|center"
            android:textStyle="bold"

            android:textColor="@color/colorPrimary"
            />
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="40dp"
            android:textSize="@dimen/dp_15"
            android:text="Select State : "
            android:gravity="left|center"
            android:textStyle="bold"
            android:id="@+id/spin_states"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="40dp"
            android:textSize="@dimen/dp_15"
            android:text="Select PC : "
            android:gravity="left|center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="40dp"
            android:textSize="@dimen/dp_15"
            android:gravity="left|center"
            android:textStyle="bold"
            android:id="@+id/spin_pc"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="40dp"
            android:textSize="@dimen/dp_15"
            android:text="Select AC : "
            android:gravity="left|center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="40dp"
            android:textSize="@dimen/dp_15"
            android:text="Select State : "
            android:gravity="left|center"
            android:textStyle="bold"
            android:id="@+id/spin_ac"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="40dp"
            android:textSize="@dimen/dp_15"
            android:text="Select Booth : "
            android:gravity="left|center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="40dp"
            android:textSize="@dimen/dp_15"
            android:text="Select State : "
            android:gravity="left|center"
            android:textStyle="bold"
            android:id="@+id/spin_booth"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/btn_ok"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:text="OK"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_margin="@dimen/dp_2"
            android:background="@drawable/button_backround"
            />
    </RelativeLayout>

</LinearLayout>
