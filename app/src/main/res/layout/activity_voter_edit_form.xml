<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_4"
    tools:context="utthamkumar.myparty.volunteer.CasteWiseVoters">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/dp_4"
        android:orientation="vertical"
        android:layout_weight="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Voter ID"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Enter Voter ID Here"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_voterID"
                android:maxLength="30"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Name"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Enter Name Here"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_name"
                android:maxLength="30"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Father/Husband Name"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Enter Father Name Here"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_father_name"
                android:maxLength="30"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="Gender"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Male"
                android:id="@+id/cwv_rb_male"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="Female"
                android:id="@+id/cwv_rb_female"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="Age"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:hint="Age"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_age"
                android:maxLength="3"
                android:maxLines="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Mobile Number"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Enter Mobile Number Here"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_mobile_number"
                android:maxLength="10"
                android:maxLines="1"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Address"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Enter Address Here"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_address"
                android:maxLines="1"
                android:maxLength="100"
                android:inputType="textPostalAddress"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Catageory"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_catageory"
                android:maxLength="30"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Caste Name"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Enter Caste Name Here"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_casteName"
                android:maxLength="20"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Last Voted"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:entries="@array/parties"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_12"
                android:id="@+id/cwv_lastvote"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Next Vote"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_12"
                android:id="@+id/cwv_nextVote"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Booth Number"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Enter Booth Number Here"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_12"
                android:id="@+id/cwv_boothnum"
                android:enabled="false"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Home Location"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:hint="PICK LOCATION"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_location"
                android:enabled="false"
                android:maxLength="100"
                android:inputType="text"/>

            <Button
                android:id="@+id/pick_loaction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:onClick="onClick"
                android:background="@drawable/ic_location_on_black_24dp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn_cwv_save"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:text="Save"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@drawable/button_backround"
                    />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
