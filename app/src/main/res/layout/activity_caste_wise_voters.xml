<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sree.myparty.volunteer.CasteWiseVoters">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/dp_4"
        android:orientation="vertical"
        android:layout_weight="0.4">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:text="Name"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/colorPrimary"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:hint="Enter Name Here"
                    android:gravity="left|center"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dp_15"
                    android:id="@+id/cwv_name"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:inputType="text"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Voter ID"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Enter Voter ID Here"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_voterID"
                android:maxLength="30"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Booth Number"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Enter Booth Number Here"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_boothnum"
                android:maxLength="4"
                android:maxLines="1"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Caste"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Enter Caste Here"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:id="@+id/cwv_caste"
                android:maxLength="30"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn_cwv_save"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:text="Generate OTP"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@drawable/button_backround"
                    />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_castewiseVoters"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>
