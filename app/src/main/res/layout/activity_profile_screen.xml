<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ConcernedPortionofScreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical">

        <!-- Parent FrameLayout 'FL' -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- This is Layout 'LL'
                 This is where you will place your image & the nice bg
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="35dp"
                android:background="#F06292" />

            <!-- BL = 50dp -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_profile_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center_horizontal"
                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_logo" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RestofScreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="0.3"
        android:background="#FCE4EC"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:paddingLeft="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center"
                android:text=""
                android:textColor="@color/profile_text"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_tv_voterID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center"
                android:text=""
                android:textColor="@color/profile_text"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_tv_mobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center"
                android:text=""
                android:textColor="@color/profile_text"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/profile_tv_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center"
                android:text=""
                android:textColor="@color/profile_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_tv_pc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center"

                android:textColor="@color/profile_text"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/profile_tv_boothNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center"

                android:textColor="@color/profile_text"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:paddingRight="2dp">

            <ImageView
                android:id="@+id/id_QRCode"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_qr_code" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="0.1">

        <TextView
            android:id="@+id/id_tv_refnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/card_rect"
            android:gravity="center"
            android:text="Ref ID : "
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#000000">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="top"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center"
                android:text="To become SILVER member invite 50 people"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center"
                android:text="To become GOLD member invite 100 people"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center"
                android:text="To become PLATINIUM member invite 500 people"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center"
                android:text="To become DIAMOND member invite 1000 people"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                 android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:text="Earned"

                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_badge"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:padding="@dimen/dp_4"
                android:orientation="vertical"

                 >




            </ImageView>

            <TextView
                android:id="@+id/id_tv_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center"
                android:text="Points :100"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>