<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sree.myparty.DashBoard.ProfileScreen"
    android:padding="@dimen/dp_10"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:src="@drawable/ic_logo"
                android:padding="@dimen/dp_4"
                android:id="@+id/id_profile_pic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.3"
                android:text="Update Photo+"
                android:layout_margin="@dimen/dp_10"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:onClick="uploadPhoto"
                android:visibility="gone"
                android:id="@+id/id_tv_app_profilepic"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:src="@drawable/ic_qr_code"
                android:padding="@dimen/dp_4"
                android:id="@+id/id_QRCode"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.3"
                android:text="Voters Added"
                android:layout_margin="@dimen/dp_10"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:id="@+id/id_tv_points"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.3"
            android:text="Ref ID : "
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:textSize="@dimen/dp_15"
            android:id="@+id/id_tv_refnumber"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:padding="@dimen/dp_5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="left|center"
            android:layout_weight="0.3"
            android:text="To become SILVER member invite 50 people"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_15"
            android:id="@+id/profile_tv_name"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="left|center"
            android:layout_weight="0.3"
            android:text="To become GOLD member invite 100 people"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_15"
            android:id="@+id/profile_tv_voterID"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="left|center"
            android:layout_weight="0.3"
            android:text="To become PLATINIUM member invite 500 people"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_15"
            android:id="@+id/profile_tv_mobileNumber"
            android:textStyle="bold"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:gravity="bottom"
        android:orientation="vertical">
       <fragment
           xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools"
           android:id="@+id/vol_map"
           android:name="com.google.android.gms.maps.SupportMapFragment"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           tools:context="sree.myparty.admin.VolunteerProfile"></fragment>
    </LinearLayout>
</LinearLayout>
